<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CopyPath___Modular_MAUI_.Views.SettingsPage">
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="#007acc" />
            <Setter Property="TextColor" Value="#ffffff" />
            <Setter Property="CornerRadius" Value="10" />
            <Style.Triggers>
                <Trigger TargetType="Button" Property="IsPressed" Value="True">
                    <Setter Property="BackgroundColor" Value="#005f99" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </ContentPage.Resources>
    <StackLayout Padding="20" Spacing="5">
        <Label Text="Name" FontSize="Small"/>
        <Entry x:Name="NameEntry" BackgroundColor="#2e2e2e" TextColor="#ffffff" Margin="0,5,0,15" />
        <Label Text="Source" FontSize="Small"/>
        <Entry x:Name="SourceEntry" BackgroundColor="#2e2e2e" TextColor="#ffffff" Margin="0,5,0,15" />
        <Label Text="Destination" FontSize="Small"/>
        <Entry x:Name="DestinationEntry" BackgroundColor="#2e2e2e" TextColor="#ffffff" Margin="0,5,0,15" />
        <Button Text="Add Option" BackgroundColor="#0099ff" Clicked="OnAddOptionClicked" CornerRadius="10" FontSize="Medium">
            <Button.GestureRecognizers>
                <PointerGestureRecognizer PointerEntered="OnButtonPointerEntered" PointerExited="OnButtonPointerExited" />
            </Button.GestureRecognizers>
        </Button>
        <ListView x:Name="OptionsListView" ItemsSource="{Binding Options}" SelectionMode="None" Margin="0,10,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Delete" Clicked="OnDeleteOptionClicked" CommandParameter="{Binding .}" />
                        </ViewCell.ContextActions>
                        <StackLayout Padding="10" Margin="0,5,0,5">
                            <StackLayout.GestureRecognizers>
                                <PointerGestureRecognizer PointerEntered="OnPointerEntered" PointerExited="OnPointerExited" />
                            </StackLayout.GestureRecognizers>
                            <Label Text="{Binding Name}" FontAttributes="Bold" TextColor="#007acc" />
                            <Label Text="{Binding Source}" FontSize="Small" TextColor="#cccccc" />
                            <Label Text="{Binding Destination}" FontSize="Small" TextColor="#cccccc" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>